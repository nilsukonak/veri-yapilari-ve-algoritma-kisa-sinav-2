#include <stdio.h>
#include <stdlib.h>


#define ROWS 3 // Matris satır sayısı
#define COLS 3 // Matris sütun sayısı

void searchInMatrix(int mat[][COLS], int target) {
    int i = 0, j = COLS-1;
    while (i < ROWS && j >= 0) {
        if (mat[i][j] == target) {
            printf("Hedef %d, %d konumunda bulundu.", i, j);
            return;
        }
        else if (mat[i][j] > target) {
            j--;
        }
        else {
            i++;
        }
    }
    printf("Hedef bulunamadı.");
}

int main() {
    int mat[ROWS][COLS] = { {1, 2, 3},
                            {4, 5, 6},
                            {7, 8, 9} };
    int target = 5;
    searchInMatrix(mat, target);
    return 0;
}
